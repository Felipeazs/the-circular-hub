{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"baseUrl": "./",
		"paths": {
			"@/server/*": ["./src/*"]
		},
		"strict": true,
		"inlineSources": true,
		"outDir": "./dist",
		"sourceMap": true,
		// Set `sourceRoot` to  "/" to strip the build path prefix
		// from generated source code references.
		// This improves issue grouping in Sentry.
		"sourceRoot": "/"
	}
}
